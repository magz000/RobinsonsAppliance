<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp" android:tag="layout/item_appliance_details_0" xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/lightestGray" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Scan Items First"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/addCompare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Compare"
                android:textColor="#868686"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/button_add_favorite"
                android:onClick="addCompare"/>

            <Button
                android:id="@+id/addWishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Wishlist"
                android:textColor="#868686"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_add_favorite"
                android:onClick="addWishlist"/>

        </LinearLayout>

    </LinearLayout>


         